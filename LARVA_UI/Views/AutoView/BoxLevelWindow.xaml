<dx:ThemedWindow
    x:Class="LARVA_UI.Views.BoxLevelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="박스 단계 설정" SizeToContent="WidthAndHeight">
    <StackPanel>
        <ItemsControl x:Name="buttonList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}" Click="StageButton_Click" Height="100" Width="200"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="OK" Click="OKButton_Click" Height="100" Width="200" Margin="25"/>
    </StackPanel>
</dx:ThemedWindow>
