                                                    <dxc:SimpleButton Style="{StaticResource ProcessBusyStyle}" IsChecked="{Binding UnitTobbab_IsChecked}" ButtonKind="Toggle" Height="50" Width="100" Content="톱밥공급중" Margin="0 5 0 5" IsHitTestVisible="False"/>
