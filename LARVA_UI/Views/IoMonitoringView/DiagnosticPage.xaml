                        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
                            <WrapPanel x:Name="DiContent2" Orientation="Vertical" Margin="5,0,5,0"/>
                        </StackPanel>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem Header="X1060~X108F" Foreground="DarkBlue" FontSize="14" FontWeight="Bold">
                    <Grid Background="#FFE5E5E5">
                        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
                            <WrapPanel x:Name="DiContent3" Orientation="Vertical" Margin="5,0,5,0"/>
                        </StackPanel>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem Header="X1090~X10BF" Foreground="DarkBlue" FontSize="14" FontWeight="Bold">
                    <Grid Background="#FFE5E5E5">
                        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
