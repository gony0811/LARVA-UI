<UserControl x:Class="LARVA_UI.Views.DiagnosticPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="DarkGray" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="99*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.RowSpan="2" Background="LightGray">
            <dxc:DXTabControl x:Name="MainContent" SelectionChanged="MainContent_SelectionChanged">
                <dxc:DXTabItem Header="X1000~X102F" Foreground="DarkBlue" FontSize="14" FontWeight="Bold">
                    <Grid Background="#FFE5E5E5">
                        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
                            <WrapPanel x:Name="DiContent1" Orientation="Vertical" Margin="5,0,5,0"/>
                        </StackPanel>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem Header="X1030~X105F" Foreground="DarkBlue" FontSize="14" FontWeight="Bold">
